<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.agadu.adultmore">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:name="com.agadu.adultmore.general.AdultMoreApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeDarkNoAction">
        <activity
            android:screenOrientation="portrait"
            android:name="com.agadu.adultmore.dashboard.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:name="com.agadu.adultmore.timecheck.TimeCheckActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name=".bite_check.BiteCheckActivity"/>
    </application>

</manifest>